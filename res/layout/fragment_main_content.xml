<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:orientation="vertical">
			<RelativeLayout 
			    android:id="@+id/lable_title"
			    android:layout_width="match_parent"
			    android:layout_height="60dp"
			    android:paddingLeft="10dp"
			    android:paddingRight="10dp"
			    android:orientation="horizontal"
			    android:background="@drawable/border_bottom">
			     <Button
			         android:id="@+id/btn_showmenu"
	                android:layout_width="35dp"
	                android:layout_height="25dp"
	                android:paddingLeft="10dp"
	                android:background="@drawable/home_menu"
	                android:layout_centerVertical="true"
	                android:onClick="show" />
			     <ImageView 
			         android:id="@+id/img_logo"
			         android:layout_width="wrap_content"
			         android:layout_height="match_parent"
	                 android:layout_centerInParent="true"
			         android:src="@drawable/home_logo"/>
			     
			     <ImageView
			         android:id="@+id/btn_market" 
			         android:layout_width="25dp"
			         android:layout_height="20dp"
			         android:layout_marginRight="10dp"
	                 android:layout_centerVertical="true"
	                 android:layout_alignParentRight="true"
	                 android:background="@drawable/home_market"/>
			</RelativeLayout>
           <RelativeLayout 
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingTop="25dp"
               android:paddingBottom="15dp">
               		<TextView 
               		    android:id="@+id/tv_name"
               		    android:layout_width="wrap_content"
               		    android:layout_height="wrap_content"
               		    android:textColor="@color/text_black"
               		    android:text="金华闪电侠跑腿"
               		    android:layout_centerHorizontal="true"
               		    android:textSize="25sp"/>
               		<TextView 
               		    android:layout_width="wrap_content"
               		    android:layout_height="wrap_content"
               		    android:textColor="@color/text_black"
               		    android:layout_marginLeft="10dp"
               		    android:layout_toRightOf="@id/tv_name"
               		    android:layout_alignBottom="@id/tv_name"
               		    android:text="为您服务！"/>
           </RelativeLayout>
           <RelativeLayout 
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
	           <LinearLayout 
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_centerHorizontal="true"
	               android:orientation="horizontal">
	               <ImageView 
	                   android:layout_width="wrap_content"
	                   android:layout_height="30dp"
	                   android:src="@drawable/location_home"/>
	               <TextView 
			         android:id="@+id/tv_current_city"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:text="金华市 婺城区"
			         android:layout_gravity="bottom"
			         android:paddingBottom="3dp"
			         android:textColor="@color/text_black"/>
			     <TextView
					android:id="@+id/btn_select_city"
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:textColor="@color/tab_select"
			         android:layout_gravity="bottom"
			         android:paddingBottom="3dp"
			         android:layout_marginLeft="10dp"
			         android:text="[城市切换]"/>
	           </LinearLayout>
           </RelativeLayout>
           <ListView 
               android:id="@+id/mylist"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:divider="@color/white"></ListView>
           <RelativeLayout 
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <LinearLayout 
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:orientation="vertical">
                   <View 
                       android:layout_width="match_parent"
                       android:layout_height="1dp"
                       android:background="@color/tab_select"/>
                   <TextView 
                       android:id="@+id/hot_line"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/text_gray"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center_horizontal"
                       android:text="客服热线：400-8888-8888"/>
                   <TextView 
                       android:id="@+id/tv_time"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/text_gray"
                       android:layout_marginTop="5dp"
                       android:layout_marginBottom="10dp"
                       android:layout_gravity="center_horizontal"
                       android:text="营业时间：00：00-24:00"/>
               </LinearLayout>
           </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
