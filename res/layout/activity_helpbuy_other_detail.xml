<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:zhy="http://schemas.android.com/apk/res/com.shengping.pao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tab_select"
        android:paddingBottom="10dp"
        >
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <com.shengping.pao.view.CustomImageView
	            android:id="@+id/user_head"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:layout_marginTop="10dp"
	            android:layout_marginBottom="10dp"
	            zhy:type="circle"
	            zhy:src="@drawable/temp"
            />
            <TextView 
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView 
                    android:id="@+id/tv_price_min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>
                <View 
                    android:layout_width="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <TextView 
                    android:id="@+id/push_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>
                <View 
                    android:layout_width="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"/>
                <TextView 
                    android:id="@+id/tv_sell_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <EditText 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dp"
			    android:layout_marginLeft="80dp"
			    android:layout_marginRight="80dp"
			    android:layout_marginBottom="10dp"
			    android:paddingLeft="10dp"
			    android:paddingRight="10dp"
			    android:paddingTop="3dp"
			    android:paddingBottom="3dp"
			    android:hint="请输入您要的商家/商品"
			    android:textSize="14sp"
			    android:textColorHint="@color/white"
			    android:textColor="@color/white"
			    android:background="@drawable/border_corner_edit_white"
			    android:drawableRight="@drawable/ico_search_white"/>
        </LinearLayout>
        <ImageView 
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
	    	android:layout_marginLeft="10dp"
            android:src="@drawable/arrow_white_left"/>
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@drawable/border_top_bottom"
	    android:paddingTop="10dp"
	    android:layout_marginTop="5dp"
	    android:paddingBottom="10dp">
	    <TextView 
	        android:id="@+id/tv_type"
	        android:layout_width="match_parent"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:textColor="@color/tab_select"
	        android:text="分类"/>
	    <TextView 
	        android:id="@+id/tv_comment"
	        android:layout_width="match_parent"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_black"
	        android:gravity="center"
	        android:text="评论"/>
	</LinearLayout>
	<android.support.v4.view.ViewPager
	        android:id="@+id/pager"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" />
</LinearLayout>
