<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg" >
     <include android:id="@+id/lable_title" layout="@layout/layout_title"/>
     <ScrollView 
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:padding="10dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="我在："
	        android:textColor="@color/text_gray"/>
	    <TextView 
	        android:id="@+id/tv_start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/text_black"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/activity_bg"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:padding="10dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="用车："
	        android:textColor="@color/text_gray"/>
	    <TextView 
	        android:id="@+id/tv_carname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/text_black"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/activity_bg"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:padding="10dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="联系电话："
	        android:textColor="@color/text_gray"/>
	    <TextView 
	        android:id="@+id/tv_phone"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/text_black"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/activity_bg"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/white"
	    android:padding="10dp"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="备注："
	        android:textColor="@color/text_gray"/>
	    <TextView 
	        android:id="@+id/tv_detail"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/text_black"/>
	</LinearLayout>
	
	<RelativeLayout
	            android:id="@+id/pay_normal" 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:layout_marginTop="20dp"
	            android:background="@color/white">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/text_gray"
	                android:layout_centerVertical="true"
	                android:text="余额支付(账户余额￥：100)"/>
	            <ImageView 
	                android:id="@+id/img_select_1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:src="@drawable/location_select"/>
	        </RelativeLayout>
	        <View android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/activity_bg"/>
	        <RelativeLayout 
	            android:id="@+id/pay_wx" 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/text_gray"
	                android:layout_centerVertical="true"
	                android:text="微信支付"/>
	            <ImageView 
	                android:id="@+id/img_select_2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:src="@drawable/select_no"/>
	        </RelativeLayout>
	        <View android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/activity_bg"/>
	        <RelativeLayout 
	            android:id="@+id/pay_aplay" 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/text_gray"
	                android:layout_centerVertical="true"
	                android:text="支付宝"/>
	            <ImageView 
	                android:id="@+id/img_select_3"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:src="@drawable/select_no"/>
	        </RelativeLayout>
	        <View android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/activity_bg"/>
	        <RelativeLayout 
	            android:id="@+id/pay_express" 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/text_gray"
	                android:layout_centerVertical="true"
	                android:text="货到付款"/>
	            <ImageView 
	                android:id="@+id/img_select_4"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                android:src="@drawable/select_no"/>
	        </RelativeLayout>
	        <RelativeLayout 
	             android:id="@+id/lable_coast"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:layout_marginTop="10dp"
	            android:background="@color/white">
	            <TextView
	                android:id="@+id/lable_title" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/text_black"
	                android:layout_centerVertical="true"
	                android:text="预付："/>
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:text="￥10.00"
	                android:textColor="@color/tab_select"
	                android:layout_alignParentRight="true"/>
	        </RelativeLayout>
	        <View android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:background="@color/activity_bg"/>
	        <RelativeLayout
	            android:id="@+id/lable_ticket" 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:background="@color/white">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/text_black"
	                android:layout_centerVertical="true"
	                android:text="优惠券"/>
	             <LinearLayout 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:orientation="horizontal"
	                android:layout_alignParentRight="true">
	                <TextView 
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:id="@+id/tv_ticket"
	                    android:layout_gravity="center_vertical"
	                    android:textColor="@color/tab_select"
	                    android:text="5元可用"/>
	                <ImageView 
	                    android:layout_width="30dp" 
	                    android:layout_height="30dp"
	                    android:layout_gravity="center_vertical"
	                    android:src="@drawable/arrow_right"/>
	            </LinearLayout>
	        </RelativeLayout>
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:layout_marginTop="20dp"
	            android:background="@color/white">
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="@color/text_black"
	                android:layout_centerVertical="true"
	                android:text="合计支付"/>
	             <TextView 
	                 android:id="@+id/money_total"
	                 android:layout_width="100dp"
	                 android:layout_height="35dp"
	                 android:background="@drawable/corner_bg"
	                 android:textColor="@color/white"
	                 android:layout_alignParentRight="true"
	                 android:gravity="center"
	                 android:textSize="20sp"
	                 android:text="￥17.00"/>
	        </RelativeLayout>
	<Button
              android:id="@+id/btn_confirm" 
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:text="去结算"
              android:layout_marginLeft="50dp"
              android:layout_marginRight="50dp"
              android:layout_marginTop="30dp"
              android:textColor="@color/tab_select"
              android:background="@drawable/border_btn"
              android:layout_centerInParent="true"/>
	</LinearLayout>
	</ScrollView>
</LinearLayout>
