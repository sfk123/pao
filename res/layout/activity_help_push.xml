    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg">
	<include layout="@layout/layout_title"/>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:paddingLeft="10dp"
       android:background="@color/white">
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:text="我在哪："
           android:textColor="@color/text_black"
           android:textSize="16sp"/>
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <EditText 
               android:id="@+id/location_start_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/text_black"
               android:editable="false"
               android:gravity="center_vertical"
               android:hint="请选择小区/大厦/交叉路口"
               android:background="@null"
               android:textColorHint="@color/text_holder"
               android:drawableLeft="@drawable/ico_location"/>
           <View android:layout_width="match_parent" android:layout_height="1dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                android:background="@color/activity_bg"/>
           <EditText 
               android:id="@+id/location_start_input"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/text_black"
               android:gravity="center_vertical"
               android:hint="具体楼层/门牌号（选填）"
               android:background="@null"
               android:textColorHint="@color/text_holder"/>
       </LinearLayout>
   </LinearLayout>
