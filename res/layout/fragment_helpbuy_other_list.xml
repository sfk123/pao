<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    	<RelativeLayout 
	    	android:id="@+id/lable_bottom"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:background="@color/white"
	        android:paddingTop="5dp"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingBottom="5dp">
	        <TextView 
	            android:id="@+id/tv_total"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="70dp"
	            android:text="购物车是空的"
	            android:layout_centerVertical="true"
	            android:textColor="@color/text_gray"/>
	        <Button 
	            android:id="@+id/btn_ok"
	            android:layout_width="100dp"
	            android:layout_height="40dp"
	            android:background="@drawable/corner_bg_gray"
	            android:layout_alignParentRight="true"
	            android:text="选好了"/>
	    </RelativeLayout>
		<com.shengping.pao.view.PinnedHeaderListView
            android:id="@+id/country_lvcountry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/lable_bottom"
            android:divider="@null"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false" />
		<RelativeLayout 
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_alignParentBottom="true">
		    <ImageView 
		        android:layout_width="70dp"
		        android:layout_height="70dp"
		        android:id="@+id/img_market"
		        android:src="@drawable/market_no"
		        android:layout_centerInParent="true"
		        android:layout_marginLeft="10dp"/>
		    <TextView 
		        android:id="@+id/tv_market_count"
		        android:gravity="center"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/corner_bg_red"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="5dp"
		        android:layout_marginTop="5dp"
		        android:textColor="@color/white"
		        android:visibility="gone"/>
	    </RelativeLayout>
</RelativeLayout>
