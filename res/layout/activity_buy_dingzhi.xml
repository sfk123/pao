<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg" >
    <include android:id="@+id/lable_title" layout="@layout/layout_title"/>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
	<LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:paddingLeft="10dp"
       android:background="@color/white">
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:text="购买地址："
           android:textColor="@color/text_black"
           android:textSize="16sp"/>
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <EditText 
               android:id="@+id/location_start_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/text_black"
               android:editable="false"
               android:gravity="center_vertical"
               android:hint="请选择小区/大厦/交叉路口"
               android:textSize="16sp"
               android:background="@null"
               android:textColorHint="@color/text_holder"
               android:drawableLeft="@drawable/ico_location"/>
           <View android:layout_width="match_parent" android:layout_height="1dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                android:background="@color/activity_bg"/>
           <EditText 
               android:id="@+id/location_start_input"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/text_black"
               android:gravity="center_vertical"
               android:hint="具体楼层/门牌号（选填）"
               android:textSize="16sp"
               android:background="@null"
               android:textColorHint="@color/text_holder"/>
       </LinearLayout>
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:background="@color/white">
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
           android:text="收货地址："
           android:textColor="@color/text_black"
           android:textSize="16sp"/>
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <TextView 
               android:id="@+id/location_end_select"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/text_black"
               android:textSize="16sp"
               android:gravity="center_vertical"
               android:hint="请选择小区/大厦/交叉路口"
               android:textColorHint="@color/text_holder"
               android:drawableLeft="@drawable/ico_location"/>
           <View android:layout_width="match_parent" android:layout_height="1dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                android:background="@color/activity_bg"/>
           <EditText 
               android:id="@+id/location_end_input"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/text_black"
               android:gravity="center_vertical"
               android:hint="具体楼层/门牌号（选填）"
               android:textSize="16sp"
               android:background="@null"
               android:textColorHint="@color/text_holder"/>
       </LinearLayout>
   </LinearLayout>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:layout_marginTop="20dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:orientation="vertical">
       <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:id="@+id/tv_lable_price" 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/text_black"
               android:text="商品大致价格："/>
           <TextView 
               android:id="@+id/tv_leble_right"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="元"
               android:layout_alignParentRight="true"
               android:textColor="@color/text_black"/>
           <EditText 
               android:id="@+id/edt_price"
               android:layout_toRightOf="@id/tv_lable_price"
               android:layout_toLeftOf="@id/tv_leble_right"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@null"
               android:textSize="16sp"
               android:textColorHint="@color/text_holder"
               android:hint="请输入代买商品的价格"/>
       </RelativeLayout >
       <View android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/activity_bg"
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"/>
       <LinearLayout 
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="购买要求："
               android:textColor="@color/text_black"/>
           <EditText
               android:id="@+id/tv_message" 
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:gravity="top"
               android:background="@null"
               android:textSize="16sp"
               android:textColorHint="@color/text_holder"
               android:hint="可填写代买说明，以便“跑”男详细了解需求"/>
       </LinearLayout>
   </LinearLayout>
  <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="20dp"
       android:paddingTop="10dp"
       android:paddingBottom="10dp"
       android:paddingLeft="10dp"
       android:paddingRight="10dp"
       android:background="@color/white">
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/text_black"
           android:textSize="16sp"
           android:text="收货电话："/>
       <com.shengping.pao.view.XEditText  
               android:id="@+id/tv_phone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/text_black"
               android:gravity="center_vertical"
               android:hint="收货人电话"
               android:background="@null"
               android:textSize="16sp"
               android:inputType="phone|textPhonetic"
               android:drawableRight="@drawable/ico_directory"
               android:textColorHint="@color/text_holder"/>
   </LinearLayout>
   <Button
              android:id="@+id/btn_confirm" 
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:text="立即下单"
              android:layout_marginLeft="50dp"
              android:layout_marginRight="50dp"
              android:layout_marginTop="30dp"
              android:textColor="@color/tab_select"
              android:background="@drawable/border_btn"
              android:layout_centerInParent="true"/>
   </LinearLayout>
   </ScrollView>
</LinearLayout>
