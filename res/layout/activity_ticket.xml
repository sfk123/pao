<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/activity_bg" >
    <include android:id="@+id/lable_title" layout="@layout/layout_title"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="13dp"
	    android:paddingBottom="13dp"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp"
	    android:layout_marginTop="20dp"
	    android:background="@drawable/border_top_bottom">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="代金券金额："
	        android:textColor="@color/text_black"/>
	    <TextView 
	        android:id="@+id/tv_ticket_total"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="￥88"
	        android:layout_marginLeft="10dp"
	        android:textColor="@color/text_black"/>
	</LinearLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:paddingLeft="20dp"
		android:paddingRight="20dp">
	    <TextView 
	        android:id="@+id/tv_exchange"
	        android:layout_width="80dp"
	        android:layout_height="40dp"
	        android:background="@color/tab_select"
	        android:text="兑换"
	        android:gravity="center"
	        android:layout_alignParentRight="true"
	        android:textColor="@color/white"/>
	 <com.shengping.pao.view.ClearEditText
		        android:id="@+id/edit_ticket_code"
		        android:layout_width="match_parent"
		        android:layout_height="40dp"
		        android:gravity="center_vertical"
		        android:paddingLeft="10dp"
		        android:hint="请输入您的兑换码"
		        android:background="@drawable/border_input_ticket"
		        android:textSize="14sp"
		        android:inputType="numberSigned"
		        android:layout_toLeftOf="@id/tv_exchange"
		        android:textColor="@color/text_black"/>
	 </RelativeLayout>
	 <TextView 
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:textColor="@color/text_black"
	     android:layout_marginLeft="20dp"
	     android:layout_marginTop="20dp"
	     android:text="代金券使用规则："/>
	 <TextView 
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:textColor="@color/text_black"
	     android:layout_marginLeft="20dp"
	     android:layout_marginTop="10dp"
	     android:layout_marginRight="20dp"
	     android:text="代金券每次仅限使用5元"/>
</LinearLayout>
